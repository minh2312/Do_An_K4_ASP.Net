@model X.PagedList.IPagedList<User>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-6" style="padding: 20px;">
        <span style="font-size:18px;font-weight:800">Danh Sách Người Dùng</span>
    </div>
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Image</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>CreateAt</th>
                    <th>UpdateAt</th>
                    <th>Option</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Count; i++)
                {
                    var user = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(user.UserImage))
                            {
                                var userIG = user.UserImage.Replace("http://10.0.2.2:3000", "http://localhost:3000");
                                    <img src="@userIG" alt="image" class="float-right rounded-circle w-75">
                            }
                            else
                            {
                                    <img src="https://cdn.pixabay.com/photo/2018/11/13/21/43/avatar-3814049_960_720.png" class="float-right rounded-circle w-75">
                            }
                        </td>
                        <td>@($"{user.FirstName} {user.LastName}")</td>
                        <td>@user.Email</td>
                        @if(user.Status){
                            <td><label class="badge badge-success">Hoạt Động</label></td>
                        }
                        else
                        {
                            <td><label class="badge badge-danger">Dừng Hoạt Động</label></td>
                        }
                        <td>@user.CreatedAt</td>
                        <td>@user.UpdatedAt</td>
                        <td>
                            <a style="color:black" href="@Url.Action("Detail", "User", new { idUser = user.Id })">Detail</a> |
                            @if (user.Status)
                            {
                                <spam style="cursor:pointer" class="Ban_User" data-IdUser="@user.Id">BanUser</spam>
                            }
                            else
                            {
                                <spam style="cursor:pointer" class="UnlockAccount" data-IdUserUnlock="@user.Id">UnlockAccount</spam>
                            }
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="pagination-container" style="margin-top:15px">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
            new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" }
            }

            )
        </div>
    </div>
</div>


