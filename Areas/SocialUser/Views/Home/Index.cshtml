                                            }
                                            else
                                            {
                                                dt = "Just now";
                                            }
                                        }
                                        else
                                        {
                                            dt = postTime.ToString("dd/MM/yyyy, HH:mm");
                                        }
                                    }
                                    else
                                    {
                                        <p>Invalid PostTime: @item.PostTime</p>
                                    }
                                }
                            }

                            @dt

