function deletePost(postId) {
    if (!confirm("Are you sure you want to delete this post?")) {
        return;
    }
    console.log(postId);
    $.ajax({
        type: "POST",
        url: `/SocialUser/Home/DeletePost`,
        data: { postId },
        success: function (response) {
